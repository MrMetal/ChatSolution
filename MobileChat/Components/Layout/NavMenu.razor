<MudAppBar Elevation="1" Position="AppBarPosition.Fixed">
	<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
	<MudSpacer />
	<MudAvatar>
		<MudIcon Icon="@Icons.Material.Filled.Person"></MudIcon>
	</MudAvatar>
</MudAppBar>

<MudDrawer @bind-Open="_drawerOpen" Elevation="2">
	<MudDrawerHeader>
		<MudText Typo="Typo.h6">Chat</MudText>
		<small>&nbsp; Versão 1.0.1</small>
	</MudDrawerHeader>

	<MudNavMenu>
		<MudNavLink Icon="@Icons.Material.Filled.Home" Href="/">Chat</MudNavLink>      
		<MudNavLink Icon="@Icons.Material.Filled.Logout" >LogOut</MudNavLink>

	</MudNavMenu>

</MudDrawer>

@code
{
	bool _drawerOpen = false;
	void DrawerToggle() => _drawerOpen = !_drawerOpen;
}
