<CascadingAuthenticationState>
	<Router AppAssembly="@GetType().Assembly">
		<Found Context="routeData">
			<AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
				<Authorizing>
					<MudGrid>
						<MudItem xs="4" />
						<MudItem xs="4">
							<Spinner />
						</MudItem>
						<MudItem xs="4" />
					</MudGrid>
				</Authorizing>
				<NotAuthorized>
					<NaoAutorizado />
				</NotAuthorized>
			</AuthorizeRouteView>
		</Found>
		<NotFound>
			<CascadingAuthenticationState>
				<LayoutView Layout="@typeof(MainLayout)"> 
					<NaoEncontrado />
				</LayoutView>
			</CascadingAuthenticationState>
		</NotFound>
	</Router>
</CascadingAuthenticationState>